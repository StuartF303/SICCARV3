@using Siccar.UI.Admin.Shared.Components

<CascadingAuthenticationState>
    <Error>
        <Router AppAssembly="@typeof(Program).Assembly">
            <Found Context="routeData">
                <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                    <Authorizing>
                        <p>Authorising...</p>
                    </Authorizing>
                    <NotAuthorized>
                        <UNAUTHORIZED/>
                    </NotAuthorized>
                </AuthorizeRouteView>
            </Found>
            <NotFound>
                <LayoutView Layout="@typeof(MainLayout)">
                    <div style=" display: grid; height: 75vh; justify-content: center; align-items: center; font-size: 1.5rem; "><p style="text-align:center">Nope sorry, there's nothing I can do for you here.</p></div>
                </LayoutView>
            </NotFound>
        </Router>
    </Error>
</CascadingAuthenticationState>